<link href="~/Content/webgrid.css" rel="stylesheet" type="text/css" />
@model IEnumerable<StockWebApplication45.Models.StockEntity>
@{
    ViewBag.Title = "Home Page";
    var gridPolicy1 = new WebGrid(source: Model.Where((item) => item.Category == 1).ToList(), canSort: false, rowsPerPage: 25, fieldNamePrefix: "gridPolicy1", columnNames: new[] { "Date", "Class", "Code", "BuyPrice", "LastPrice", "ReturnRate", "SaleDate", "Status" });
    var gridPolicy2 = new WebGrid(source: Model.Where((item) => item.Category == 2).ToList(), canSort: false, rowsPerPage: 25, fieldNamePrefix: "gridPolicy2", columnNames: new[] { "Date", "Class", "Code", "BuyPrice", "LastPrice", "ReturnRate", "SaleDate", "Status" });
}

